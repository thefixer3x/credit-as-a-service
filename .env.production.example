# Credit-as-a-Service Platform - Production Environment Configuration
# Copy this to .env.production and fill in the actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=caas_production
POSTGRES_USER=caas_prod_user
POSTGRES_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_32_chars_exactly

# Admin Configuration
ADMIN_SECRET=your_admin_secret_key_here
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_key_here

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS
# =============================================================================

# SME Infrastructure Integration (srv896342.hstgr.cloud)
SME_API_URL=https://api.seftechub.com
SME_API_KEY=your_sme_api_key_here

# Email Service
EMAIL_SERVICE_URL=https://api.emailservice.com
EMAIL_API_KEY=your_email_api_key_here

# SMS Service
SMS_SERVICE_URL=https://api.smsservice.com
SMS_API_KEY=your_sms_api_key_here

# Push Notification Service
PUSH_SERVICE_URL=https://api.pushservice.com
PUSH_API_KEY=your_push_api_key_here

# =============================================================================
# PAYMENT GATEWAY INTEGRATIONS
# =============================================================================

# Payment Gateway Configuration
PAYMENT_GATEWAY_URL=https://api.paymentgateway.com
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# Paystack (Nigerian payment processor)
PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_public_key
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key

# Stripe (International payment processor)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
BLOCKCHAIN_PRIVATE_KEY=your_blockchain_private_key_here
ESCROW_CONTRACT_ADDRESS=0xYourEscrowContractAddress

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=caas-production-documents

# =============================================================================
# EXTERNAL API SERVICES
# =============================================================================

# OCR Service for document processing
OCR_SERVICE_URL=https://api.ocrservice.com
OCR_API_KEY=your_ocr_api_key

# Antivirus Service for file scanning
ANTIVIRUS_SERVICE_URL=https://api.antivirusservice.com
ANTIVIRUS_API_KEY=your_antivirus_api_key

# Machine Learning Model for risk assessment
ML_MODEL_URL=https://api.mlservice.com
ML_API_KEY=your_ml_api_key

# Credit Bureau Integration
CREDIT_BUREAU_API_URL=https://api.creditbureau.com
CREDIT_BUREAU_API_KEY=your_credit_bureau_api_key

# Compliance and KYC Services
COMPLIANCE_API_URL=https://api.complianceservice.com
COMPLIANCE_API_KEY=your_compliance_api_key

# =============================================================================
# APPLICATION URLS
# =============================================================================
API_URL=https://api.caas.platform.com
WS_URL=wss://ws.caas.platform.com
NEXTAUTH_URL=https://providers.caas.platform.com
PROVIDER_API_URL=https://provider-api.caas.platform.com
INTEGRATION_TEST_BASE_URL=https://integration-test.caas.platform.com
INTEGRATION_BASE_URL=https://integrations.caas.platform.com

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Logging Configuration
LOG_LEVEL=info

# Alert Webhook (Slack, Teams, etc.)
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password

# =============================================================================
# RISK ASSESSMENT CONFIGURATION
# =============================================================================
RISK_THRESHOLD_LOW=300
RISK_THRESHOLD_HIGH=650

# =============================================================================
# MARGIN AND REVENUE CONFIGURATION
# =============================================================================

# Default margin percentages for lead generation platform
DEFAULT_MARGIN_PERCENTAGE=8.5
MINIMUM_MARGIN_PERCENTAGE=2.0
MAXIMUM_MARGIN_PERCENTAGE=25.0

# Provider onboarding configuration
PROVIDER_ONBOARDING_WEBHOOK=https://api.caas.platform.com/webhooks/provider-onboarding

# Integration service configuration
MARGIN_CALCULATION_ENABLED=true
CUSTOM_INTEGRATION_ENABLED=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# WebSocket Configuration
NOTIFICATIONS_SERVICE_PORT=3003
NOTIFICATIONS_WS_PORT=3010
EVENT_BUS_ENABLED=true

# =============================================================================
# SERVICE PORTS (for internal communication)
# =============================================================================

# Main application services
WEB_DASHBOARD_PORT=3000
ADMIN_PORTAL_PORT=3001
CORE_API_PORT=3002
NOTIFICATIONS_PORT=3003
DOCUMENTS_PORT=3004
RISK_ASSESSMENT_PORT=3005
PAYMENTS_PORT=3006
MONITORING_PORT=3007

# B2B Provider services
CREDIT_PROVIDERS_PORT=3008
PROVIDER_DASHBOARD_PORT=3009
ADMIN_PROVIDER_MANAGEMENT_PORT=3012

# WebSocket and real-time services
WEBSOCKET_PORT=3010

# Monitoring services
GRAFANA_PORT=3011
PROMETHEUS_PORT=9091

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
VERSION=1.0.0
API_HOST=srv896342.hstgr.cloud

# Health check configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_REQUESTS_PER_HOUR=10000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Configuration
CORS_ORIGIN=https://caas.platform.com,https://providers.caas.platform.com,https://admin.caas.platform.com

# Session Configuration
SESSION_TIMEOUT=3600000
REFRESH_TOKEN_EXPIRY=7d

# API Security
API_KEY_EXPIRY=365d
WEBHOOK_SIGNATURE_VERSION=v1

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_S3_BUCKET=caas-production-backups

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_BLOCKCHAIN_INTEGRATION=true
ENABLE_AUTOMATED_UNDERWRITING=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MULTI_PROVIDER_BIDDING=true
ENABLE_CUSTOM_INTEGRATIONS=true
ENABLE_MARGIN_OPTIMIZATION=true

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# Production-specific optimizations
DB_POOL_SIZE=20
REDIS_POOL_SIZE=10
NODE_OPTIONS=--max-old-space-size=4096

# Production security enhancements
SECURE_COOKIES=true
ENFORCE_HTTPS=true
TRUST_PROXY=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Analytics and Tracking
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Customer Support
INTERCOM_APP_ID=your_intercom_app_id
ZENDESK_SUBDOMAIN=your_zendesk_subdomain

# Business Intelligence
AMPLITUDE_API_KEY=your_amplitude_api_key

# =============================================================================
# LOAD BALANCING AND SCALING
# =============================================================================
LOAD_BALANCER_ENABLED=false
MAX_CONCURRENT_CONNECTIONS=1000
WORKER_PROCESSES=4

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
REDIS_CACHE_PREFIX=caas:prod