{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**", "out/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.mjs",
        "eslint.config.mjs",
        ".eslintrc*",
        "../../eslint.config.mjs",
        "../../packages/config/src/eslint/**"
      ]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "../../tsconfig.json",
        "../../packages/types/src/**/*.ts"
      ]
    },
    "clean": {
      "cache": false
    },
    "compile": {
      "dependsOn": ["^build"],
      "outputs": ["artifacts/**", "cache/**", "typechain-types/**"]
    },
    "deploy:local": {
      "dependsOn": ["compile"],
      "cache": false
    },
    "deploy:testnet": {
      "dependsOn": ["compile"],
      "cache": false
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
