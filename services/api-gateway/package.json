{
  "name": "@caas/api-gateway",
  "version": "1.0.0",
  "description": "Enterprise API Gateway with rate limiting, audit trails, and request/response logging",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
