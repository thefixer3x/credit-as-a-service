{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "ES2015", "ES2017", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@caas/contracts": ["./packages/contracts/src"],
      "@caas/ui-kit": ["./packages/ui-kit/src"],
      "@caas/ui-kit/*": ["./packages/ui-kit/src/*"],
      "@caas/common": ["./packages/common/src"],
      "@caas/sdk": ["./packages/sdk/src"],
      "@caas/config": ["./packages/config/src"],
      "@caas/types": ["./packages/types/src"]
    },
    "types": ["bun-types", "minimatch"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "**/dist",
    "build",
    "**/build",
    ".turbo",
    "**/.turbo"
  ]
}